<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B58CE104"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/register_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@id/image_btn"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        android:src="@drawable/ic_arrow_white"
        app:layout_constraintEnd_toStartOf="@id/register_im"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/register_im" />


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_im">

        <EditText
            android:id="@id/user_name_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green"
            android:hint="User name"
            android:paddingStart="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trivia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Trivia"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green"
            android:hint="Email"
            android:paddingStart="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="350dp"
        android:layout_height="90dp"

        android:layout_marginTop="5dp"
        android:background="@drawable/edit2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear2">


        <EditText
            android:id="@+id/pass_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green"
            android:hint="Password"
            android:inputType="textNoSuggestions|textPassword"
            android:paddingStart="25dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear3"
        >

        <Button
            android:id="@+id/next_btn"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="NEXT"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@id/linear3"
            app:layout_constraintStart_toStartOf="@id/linear3"
            app:layout_constraintTop_toBottomOf="@id/linear3" />


    </FrameLayout>


    <ImageView
        android:id="@+id/owl_iv"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame1" />

    <ImageView
        android:id="@+id/question_mark1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame1" />

    <ImageView
        android:id="@+id/question_mark2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame1"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/question_mark1"
        android:layout_marginStart="120dp"/>

    <ImageView
        android:id="@+id/question_mark3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame1"
        app:layout_constraintStart_toEndOf="@id/question_mark1"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/owl_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

